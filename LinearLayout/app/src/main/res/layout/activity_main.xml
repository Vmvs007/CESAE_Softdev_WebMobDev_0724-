<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/text_titulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Conversor Moedas"
        android:gravity="center"
        android:textSize="30sp"/>

    <EditText
        android:id="@+id/edit_euros"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="25dp"
        android:hint="Euros"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_converterDolar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="DOLAR"
            android:backgroundTint="@color/darkGreen"
            />

        <Button
            android:id="@+id/button_converterReal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:backgroundTint="@color/orange"
            android:text="REAL"/>
        <Button
            android:id="@+id/button_converterPeso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:backgroundTint="@color/purple"
            android:text="PESO"/>

    </LinearLayout>


    <TextView
        android:id="@+id/text_dolares"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0 Dolares"
        android:layout_margin="10dp"
        android:gravity="center"
        android:textSize="30sp"/>

    <TextView
        android:id="@+id/text_copyright"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Desenvolvido por Mim :D"
        android:layout_margin="10dp"
        android:gravity="center"
        android:textColor="@color/grey"
        android:textSize="15sp"/>

</LinearLayout>